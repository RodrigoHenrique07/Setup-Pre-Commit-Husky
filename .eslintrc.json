{
  "env": {
      "es2021": true,
      "node": true
  },
  "settings": {
    "react": {
      "version": "detect" 
    }
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "react"
  ],
  "rules": {
      "react/react-in-jsx-scope": "off"
  }
}